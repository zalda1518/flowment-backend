# Variables de entorno para el Backend de FLOWMENT
# Copia este archivo como .env y configura tus valores reales

# Puerto del servidor
PORT=3001

# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=flowment

# Clave secreta para JWT (genera una clave segura única)
JWT_SECRET=cambia_esto_por_una_clave_secreta_muy_segura

# Entorno de ejecución
NODE_ENV=development

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3000
